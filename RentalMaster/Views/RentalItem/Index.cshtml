@model IEnumerable<RentalMaster.Models.RentalItem>

@{
    ViewData["Title"] = "Index - Rental Items";
}

<h1>Rental Items</h1>

<p>
   
    <th>
        <a asp-action="Create" class="text-center btn btn-outline-success"><i class="far fa-plus-square"></i>Create New Item</a>
    </th>
    <th>
        <a asp-controller="RentalItemModel" asp-action="Index" class="text-center btn btn-outline-success"><i class="far fa-plus-square"></i> Models </a>
    </th>
    <th>
        <a asp-controller="RentalItemMake" asp-action="Index" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Makes </a>
    </th>
  
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalItemMake.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalItemModel.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalItemStatus.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalItemMake.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalItemModel.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalItemStatus.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
