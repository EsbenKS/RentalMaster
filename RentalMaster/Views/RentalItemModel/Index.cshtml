@model IEnumerable<RentalMaster.Models.RentalItemModel>

@{
    ViewData["Title"] = "Models";
}

<h1>Models</h1>

<p>

    <th>
        <a asp-action="Create" class="text-center btn btn-outline-success"><i class="far fa-plus-square"></i>Create New Model</a>
    </th>

    <th>
        <a asp-controller="RentalItemMake" asp-action="Index" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Makes </a>
    </th>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalItemMake.Name)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @(item.RentalItemMake == null ? "" : item.RentalItemMake.Name)   
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
